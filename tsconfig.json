{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
     "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src"]
}